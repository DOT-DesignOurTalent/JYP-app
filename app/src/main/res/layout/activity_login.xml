<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <ImageView
        android:id="@+id/login_logo_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/colorMainBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_email_edittext"
        app:layout_constraintVertical_chainStyle="packed"/>

    <EditText
        android:id="@+id/login_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        app:layout_constraintTop_toBottomOf="@id/login_logo_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_pwd_edittext"/>
    <EditText
        android:id="@+id/login_pwd_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="패스워드"
        app:layout_constraintTop_toBottomOf="@id/login_email_edittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_btn"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@id/login_pwd_edittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_auto_ll"/>

    <LinearLayout
        android:id="@+id/login_auto_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/login_find_pwd_btn"
        app:layout_constraintBottom_toTopOf="@id/login_no_account_text">
        <ImageView
            android:id="@+id/login_auto_img"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/colorMainBlue"/>
        <Button
            android:id="@+id/login_auto_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이용약관 동의"
            android:background="@null"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_find_pwd_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="이용약관 보기"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/login_auto_ll"
        app:layout_constraintBottom_toTopOf="@id/login_no_account_text"/>

    <TextView
        android:id="@+id/login_no_account_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정이 아직 없으신가요?"
        app:layout_constraintTop_toBottomOf="@id/login_auto_ll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_register_btn"/>
    <Button
        android:id="@+id/login_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        app:layout_constraintTop_toBottomOf="@id/login_no_account_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_non_member_btn"/>
    <Button
        android:id="@+id/login_non_member_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비회원 로그인"
        app:layout_constraintTop_toBottomOf="@id/login_register_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>