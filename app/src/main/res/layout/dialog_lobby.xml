<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="550dp"
        android:background="@color/colorGrey1">
        <ImageView
            android:id="@+id/image_dialog_lobby_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_close_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="213dp"
            android:layout_height="205dp"
            android:src="@drawable/ic_envelope"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.2"/>

        <TextView
            android:id="@+id/text_dialog_lobby_comment"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:text="아래의 링크를 통해 법정을 열고 피고인들을 소환합니다."
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.58"/>
        <TextView
            android:id="@+id/text_dialog_lobby_code"
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:textSize="16dp"
            android:gravity="center"
            android:text="113"
            style="@style/EDITTEXT_MAIN"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.75"/>
        <ImageView
            android:id="@+id/image_lobby_dialog_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_icon"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="@id/text_dialog_lobby_code"
            app:layout_constraintTop_toTopOf="@id/text_dialog_lobby_code"
            app:layout_constraintBottom_toBottomOf="@id/text_dialog_lobby_code"/>
        <Button
            android:id="@+id/btn_dialog_lobby_enter"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="법정 입장"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"
            style="@style/BUTTON_MAIN_ACTIVE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.9"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>