<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_item_select_category1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_item_select_category2"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_item_select_category1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_korean"/>
        <TextView
            android:id="@+id/text_item_select_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한식"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_item_select_category2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_item_select_category1"
        app:layout_constraintRight_toLeftOf="@id/layout_item_select_category3"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_item_select_category2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_fastfood"/>
        <TextView
            android:id="@+id/text_item_select_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양식"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_item_select_category3"
        android:layout_width="70dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_item_select_category2"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_item_select_category3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_chinese"/>
        <TextView
            android:id="@+id/text_item_select_category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>