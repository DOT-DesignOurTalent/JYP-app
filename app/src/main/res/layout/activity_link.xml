<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lobby.LinkActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_link_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorMainBlue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_actionbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="법점"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </androidx.appcompat.widget.Toolbar>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_link_actionbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintWidth_percent="0.9"
        android:background="@drawable/ic_rectangle">
        <ImageView
            android:id="@+id/image_link_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_close_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="213dp"
        android:layout_height="205dp"
        android:src="@drawable/ic_envelope"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <TextView
        android:id="@+id/btn_link_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center"
        android:text="아래의 링크를 통해 법정을 열고 피고인들을 소환합니다."
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6"/>
    <TextView
        android:id="@+id/btn_link_copy"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:textSize="16dp"
        android:gravity="center"
        android:text="code"
        style="@style/EDITTEXT_MAIN"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.7"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_copy_icon"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/btn_link_copy"
        app:layout_constraintTop_toTopOf="@id/btn_link_copy"
        app:layout_constraintBottom_toBottomOf="@id/btn_link_copy"/>
    <Button
        android:id="@+id/btn_link_enter"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="법정 입장"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        style="@style/BUTTON_MAIN_ACTIVE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>