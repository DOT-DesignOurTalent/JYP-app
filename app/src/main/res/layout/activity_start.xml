<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.StartActivity">
    <ImageView
        android:id="@+id/image_start_logo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="16dp"

        android:background="@color/colorMainBlue"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_start_title"/>
    <TextView
        android:id="@+id/text_start_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="오늘의 점심 판결이\n시작됩니다."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorMainBlue"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/image_start_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_start_sub_title"/>
    <TextView
        android:id="@+id/text_start_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/app_start_title2"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_start_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start_member_login"/>
    <Button
        android:id="@+id/btn_start_member_login"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:text="회원 로그인"
        style="@style/BUTTON_MAIN_ACTIVE"
        app:layout_constraintTop_toBottomOf="@id/text_start_sub_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start_nonmem_login"/>
    <Button
        android:id="@+id/btn_start_nonmem_login"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:text="비회원 로그인"
        style="@style/BUTTON_MAIN_ACTIVE"
        app:layout_constraintTop_toBottomOf="@id/btn_start_member_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_start_warn_nonmem"/>
    <TextView
        android:id="@+id/text_start_warn_nonmem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비회원은 메뉴 선정 개수가 제한됩니다."
        android:textColor="@color/colorError"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/btn_start_nonmem_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>