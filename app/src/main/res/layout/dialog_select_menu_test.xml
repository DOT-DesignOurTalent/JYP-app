<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey1"
    app:cardCornerRadius="30dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/image_select_dialog_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_close_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text_select_dialog_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:text="음식점 1"
            android:textColor="@color/colorMainBlue"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text_select_dialog_restaurant1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="미스터 피자"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/text_select_dialog_title1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/image_select_dialog_left1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_left_act"
            app:layout_constraintRight_toLeftOf="@id/text_select_dialog_restaurant1"
            app:layout_constraintTop_toBottomOf="@id/text_select_dialog_title1"/>

        <ImageView
            android:id="@+id/image_select_dialog_right1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_right_act"
            app:layout_constraintLeft_toRightOf="@id/text_select_dialog_restaurant1"
            app:layout_constraintTop_toBottomOf="@id/text_select_dialog_title1"/>


        <TextView
            android:id="@+id/text_select_dialog_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:text="음식점 2"
            android:textColor="#999999"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_select_dialog_restaurant1"/>
        <TextView
            android:id="@+id/text_select_dialog_restaurant2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/text_select_dialog_title2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/image_select_dialog_left2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_left_act"
            app:layout_constraintRight_toLeftOf="@id/text_select_dialog_restaurant2"
            app:layout_constraintTop_toBottomOf="@id/text_select_dialog_title2"/>

        <ImageView
            android:id="@+id/image_select_dialog_right2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_right_act"
            app:layout_constraintLeft_toRightOf="@id/text_select_dialog_restaurant2"
            app:layout_constraintTop_toBottomOf="@id/text_select_dialog_title2"/>

        <TextView
            android:id="@+id/text_select_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="비회원은 메뉴 선정이 1개로 제한됩니다."
            android:textColor="@color/colorError"
            app:layout_constraintTop_toBottomOf="@id/image_select_dialog_right2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        
        <Button
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="선정완료"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            style="@style/BUTTON_MAIN_ACTIVE"
            app:layout_constraintTop_toBottomOf="@+id/text_select_dialog_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>