            <TextView
                android:id="@+id/text_dialog_select_category2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양식"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_dialog_select_category3"
            android:layout_width="70dp"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_select_dialog_close"
            app:layout_constraintLeft_toRightOf="@id/layout_dialog_select_category2"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_chinese"/>
            <TextView
                android:id="@+id/text_dialog_select_category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중식"/>
        </LinearLayout>


        <LinearLayout
