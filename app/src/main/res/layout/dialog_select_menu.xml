                android:layout_height="wrap_content"
                android:text="일식"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_dialog_select_category5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_dialog_select_category2"
            app:layout_constraintLeft_toRightOf="@id/layout_dialog_select_category4"
            app:layout_constraintRight_toLeftOf="@id/layout_dialog_select_category6"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_asian"/>
            <TextView
                android:id="@+id/text_dialog_select_category5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아시안 음식"/>
        </LinearLayout>
